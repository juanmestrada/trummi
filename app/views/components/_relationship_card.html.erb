<div class="col-6 col-sm-3 col-lg-2 p-1">
	<div class="card profile-container border-0" data-rel-profile="<%= rel_profile.id %>">
		<% if new_conv_or_pm?(rel_profile.id) %>
		    <%= button_to new_personal_message_path, params: {receiver_id: rel_profile.id}, class: "p-0", form_class: "profile-message", title: "Message", method: :get, remote: true, data: { bs_toggle: "modal", bs_target: "#postModal" } do %>
		    	<% if rel_profile.image1? %>
		        	<%= image_tag(rel_profile.image1.url(:thumb), height: "100%", width: "100%", draggable: "false", class: "card-img-top no-sel") %>
		        <% else %>
		            <%= image_tag("https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", height: "100%", width: "100%", draggable: "false", class: "card-img-top no-sel") %>
		        <% end %>
		    <% end %>
		<% else %>
			<%= button_to new_personal_message_path, params: {receiver_id: rel_profile.id}, class: "p-0", form_class: "profile-message", title: "Message", method: :get do %>
				<% if rel_profile.image1? %>
		        	<%= image_tag(rel_profile.image1.url(:thumb), height: "100%", width: "100%", draggable: "false", class: "card-img-top no-sel") %>
		        <% else %>
		            <%= image_tag("https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", height: "100%", width: "100%", draggable: "false", class: "card-img-top no-sel") %>
		        <% end %>
		    <% end %>
		<% end %>
		    
		<div class="card-body profile-info">
			<p class="card-title profile-name"><%= rel_profile.name %></strong></p>	
		</div>
		
	</div>
</div>