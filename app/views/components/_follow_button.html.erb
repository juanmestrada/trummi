<% if current_user.profile.following?(profileuser) %>
  <%= button_to current_user.profile.active_relationships.find_by(followed_id: profileuser.id), method: :delete, remote: true, class: "post-follow", title: "Unfollow" do %>
    <i class="fas fa-user-minus"></i>
  <% end %>
<% else %>
  <%= button_to [current_user.profile.active_relationships.build, followed_id: profileuser.id], method: :post, remote: true, class: "post-follow", title: "Follow" do %>
    <i class="fas fa-user-plus"></i>
  <% end %>
<% end %>