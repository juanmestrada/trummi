<% @commenters.limit(5).map do |commenter| %>	
	<div class="col imgwr">
		<div class="header-img">
			<% if commenter.profile.image1? %>
	            <%= image_tag(commenter.profile.image1.url(:thumb), height: "100%", width: "100%", class: "card-img-top no-sel", draggable:"false")  %>
	          <% else %>
	            <%= image_tag("https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", height: "100%", width: "100%", class: "card-img-top no-sel", draggable:"false") %>
	        <% end %>
		</div>
	</div> 	
<% end %>
<% if @commenters.count > 5 %>
	<div class="col imgwr">
		<span>+<%= number_to_human(@commenters.count - 5) %></span>
	</div>
<% end %>