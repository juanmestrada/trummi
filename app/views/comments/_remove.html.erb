<div class="confirm-menu-body">
  <div class="confirm-title">
    <div class="text-dark fw-bold mb-1">Delete this comment?</div>
    <span class="small">This is permanent. You cannot restore comments that have been deleted.</span>
  </div>

  <%= button_to [@comment.post, @comment], method: :delete, remote: true, data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>" }, class: 'confirm-item confirm-btn confirm_continue fw-bold' do %>
    <span class="text-danger">Delete</span>
  <% end %>

  <a class="confirm-item confirm-btn confirm_cancel fw-bold" data-bs-dismiss="modal" role="button" aria-label="Close">
    <span class="text-dark">Cancel</span>
  </a>
</div> 