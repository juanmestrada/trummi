<% content_for :title, "Reset your password - trummi" %>

<div id="sessions">
  <div class="mb-5" align="center">
    <h5>Trouble Logging In?</h5>
    <p>Please enter the email address associated with your account. Weâ€™ll send you an email with instructions on how to reset your password.</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <div class="form-group mb-4">
      <div class="form-floating">
        <%= f.email_field :email, placeholder: "Email", autocomplete: "email", type: "email", class: "form-control shadow-sm bg-white rounded", id: "floatingInput", required: true %>
        <label for="floatingInput">Email address</label>
      </div>
    </div>

    <div class="row" id="error-div">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="form-group mb-5" align="center">
      <%= f.button "Reset Password", class: "post-btn rounded-pill w-100", data: {disable_with: "<i class='fas fa-spinner fa-spin'></i>"} %>
    </div>

    <div class="form-group" align="center">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div>
          Don't have an account? <span class="tr-pri-c"><%= link_to "Sign up", new_registration_path(resource_name) %></span>
        </div>
      <% end %>
    </div>
    
  <% end %> 
</div>